@{
    ViewData["Title"] = "Ana Sayfa";
}
<!-- Section: Design Block -->
<section class="text-center text-lg-start">  
    <!-- Jumbotron -->
    <div class="container py-4">
      <div class="row g-0 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card cascading-right" style="background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px); ">
            <div class="card-body p-5 shadow-5 text-center">
                @using (Html.BeginForm("CreateBarkod", "Barkod", FormMethod.Post))
                {
                    <div class="row" style="justify-content:center">
                        <div class="col-md-6 mb-4">
                            <div class="form-outline">
                                <div class="row mb-3">
                                    <label class="form-label" for="stokNo"><b>Stok No</b></label>
                                    @Html.TextBox("stokNo", "", new { @class = "form-control" })
                                </div>
                                <div class="row">
                                    <label class="form-label" for="miktar"><b>Miktar</b></label>
                                    @Html.TextBox("gelenMiktar", "", new { @class = "form-control" })
                                </div>
                                </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mb-4" style="background-color: darkblue;">
                        <strong>Barkod Oluştur</strong>
                    </button>
                  }
            </div>
          </div>
        </div>
  
        <div class="col-lg-6 mb-5 mb-lg-0">
          <img src="~/img/Barcode System.png" class="w-100 rounded-4 shadow-4"
            alt="Barcode System" />
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>
<!-- Section: Design Block -->

